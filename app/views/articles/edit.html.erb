<h1>Edit Article</h1>
<h3><%= @article.title %></h3>
<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title , @article.title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text , @article.title %>
  </p>
 
  <p>
    <%= f.submit %> <%= link_to 'Back', articles_path %>
  </p>
  
<% end %>
